{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'chat-server'",
            "cargo": {
                "args": [
                    "build",
                    "--package=chat-server"
                ],
                "filter": {
                    "name": "chat-server",
                    "kind": "bin"
                }
            },
            "stdio": [
                null,
                null,
                "${workspaceFolder}/server.log",
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'chat-client'",
            "cargo": {
                "args": [
                    "build",
                    "--package=chat-client",
                ],
                "filter": {
                    "name": "chat-client",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "stdio": [
                null,
                null,
                "${workspaceFolder}/client.log",
            ],
            "terminal": "external",
        }
    ]
}